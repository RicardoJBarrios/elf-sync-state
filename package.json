{
  "name": "elf-sync-state",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "nx run elf-sync-state:build",
    "test": "nx run elf-sync-state:test --codeCoverage",
    "lint": "nx run elf-sync-state:lint",
    "predeploy": "npm run lint && npm run test && nx run elf-sync-state:version && npm run build",
    "deploy": "npm publish dist/packages/elf-sync-state --access public",
    "audit:fix": "npm audit --fix",
    "update:nx": "nx migrate latest && npm install && (test -f migrations.json && (nx migrate --run-migrations && rm migrations.json) || 2>/dev/null)",
    "prepare": "husky install",
    "commit": "cz"
  },
  "private": true,
  "dependencies": {
    "@ngneat/elf": "^2.0.0",
    "@ngneat/elf-entities": "^4.3.1",
    "lodash-es": "^4.17.21",
    "rxjs": "^7.5.5",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@jscutlery/semver": "^2.23.4",
    "@nrwl/cli": "15.9.7",
    "@nrwl/eslint-plugin-nx": "15.9.7",
    "@nrwl/jest": "15.9.7",
    "@nrwl/js": "15.9.7",
    "@nrwl/linter": "15.9.7",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/rollup": "15.9.7",
    "@nrwl/web": "15.9.7",
    "@nrwl/workspace": "15.9.7",
    "@types/jest": "~29.4.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "babel-preset-minify": "^0.5.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "^7.0.4",
    "jest": "~29.4.1",
    "jest-environment-jsdom": "~28.1.1",
    "lint-staged": "^12.4.1",
    "lodash": "^4.17.21",
    "nx": "15.9.7",
    "prettier": "^2.6.2",
    "ts-jest": "~29.0.5",
    "ts-node": "10.9.1",
    "typescript": "~4.9.5",
    "yarn-audit-fix": "^9.3.1"
  },
  "resolutions": {
    "minimist": ">=1.2.6"
  },
  "lint-staged": {
    "*": [
      "nx format:write --files"
    ],
    "*.{js,jsx,ts,tsx}": [
      "nx affected:lint --fix --files"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "elf-sync-state"
        ]
      ]
    }
  }
}
