{
  "name": "elf-sync-state",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "nx run elf-sync-state:build",
    "precd": "yarn build",
    "cd": "npm publish dist/packages/elf-sync-state --access public",
    "audit:fix": "yarn-audit-fix",
    "update:nx": "nx migrate latest && yarn && (test -f migrations.json && (nx migrate --run-migrations && rm migrations.json) || 2>/dev/null)",
    "prepare": "husky install",
    "commit": "cz"
  },
  "private": true,
  "dependencies": {
    "@ngneat/elf": "^2.0.0",
    "@ngneat/elf-entities": "^4.3.1",
    "lodash-es": "^4.17.21",
    "rxjs": "^7.5.5",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@jscutlery/semver": "^2.23.4",
    "@nrwl/cli": "14.1.5",
    "@nrwl/eslint-plugin-nx": "14.1.5",
    "@nrwl/jest": "14.1.5",
    "@nrwl/js": "14.1.5",
    "@nrwl/linter": "14.1.5",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "14.1.5",
    "@types/jest": "27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "~5.18.0",
    "@typescript-eslint/parser": "~5.18.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.12.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "lint-staged": "^12.4.1",
    "lodash": "^4.17.21",
    "nx": "14.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "27.1.4",
    "ts-node": "9.1.1",
    "typescript": "~4.6.2",
    "yarn-audit-fix": "^9.3.1"
  },
  "resolutions": {
    "minimist": ">=1.2.6"
  },
  "lint-staged": {
    "*": [
      "nx format:write --files"
    ],
    "*.{js,jsx,ts,tsx}": [
      "nx affected:lint --fix --files"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "elf-sync-state"
        ]
      ]
    }
  }
}
